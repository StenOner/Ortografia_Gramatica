<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.ortografia_gramatica.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/new_paragraph"
        android:hint="@string/paragraph_hint"
        />
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumberPicker01"
        android:layout_marginStart="20dp"
        android:layout_below="@id/new_paragraph"
        android:layout_marginTop="-60dp"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/send_button"
        android:text="@string/send_button"
        android:layout_toRightOf="@id/NumberPicker01"
        android:layout_below="@+id/new_paragraph"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:onClick="enviarParrafo"
        />
</RelativeLayout>
